<!DOCTYPE html>
<html lang="en">

<!-- All js variables needed:
  - semesterAlreadyExists
  - semesterCreated
  - numCoursesAdded
  - numCoursesFailedToAdd
  - coursesAdded
  - errorMessage
  -->

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="./css/styles.css">
  <title>Update Semester Response - Notion Tools</title>
</head>

<body>
  <div class="notion-container">
    <h1 class="notion-title">ğŸ‰ Updated into Notion Acads Database!</h1>

    <div class="notion-card">
      <h3 class="section-title">
        <% if (semesterAlreadyExists) { %>
          âœ… Semester page not created as it already exists.

        <% } else if (semesterCreated) { %>
          âœ… Semester page created successfully.
        <% } else { %>
          âŒ Failed to create semester page or verify existence.
        <% } %>
      </h3>  
    </div>

    <% if (numCoursesAdded > 0) { %>
      <div class="notion-card">
        <h3 class="section-title">
          âœ… <%= numCoursesAdded %> Courses Added
        </h3>
        <ul class="list-group">
          <% coursesAdded.forEach(courseName => { %>
            <li class="list-group-item">
              <i class="fas fa-book me-2"></i>
              <%= courseName %>
            </li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <% if (numCoursesFailedToAdd > 0) { %>
      <div class="notion-card">
        <h3 class="section-title">
          âŒ <%= numCoursesFailedToAdd %> Courses Failed to Add
        </h3>
      </div>
    <% } %>

    <!-- error message area -->
    <% if (locals.errorMessage) { %>
      <div class="alert alert-danger mt-4">
        <h3 class="alert-heading">âš ï¸ Errors</h3>
        <strong>Error:</strong> <%= locals.errorMessage %>
      </div>
    <% } %>

    <button class="btn btn-primary mt-4" onclick="window.location.href='/add-semester'">
      <i class="fas fa-plus me-2"></i>
      Add another semester
    </button>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"></script>

    <script src="./js/script.js"></script>
</body>

</html>