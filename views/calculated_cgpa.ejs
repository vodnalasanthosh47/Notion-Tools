<!DOCTYPE html>
<html lang="en">

<!-- All js variables needed:
  - overallCGPA
  - semesterWideData
  -->

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="./css/styles.css">
  <title>Update Semester Response - Notion Tools</title>
</head>

<body>

  <div class="notion-container">
     <p class="back-paragraph">
        <a href="/" class="back-link">
        <i class="fa-solid fa-arrow-left me-2"></i>
        Home
        </a>
    </p>
    
    <% if (locals.overallCGPA) { %>
        <h1 class="notion-title">ðŸŽ‰ Calculated CGPA</h1>
    <% } else { %>
        <h1 class="notion-title">Calculate CGPA</h1>
    <% } %>

    <form action="/calculate-cgpa" method="post">
        <button class="btn btn-primary mt-4">
            Calculate CGPA & SGPAs
        </button>
    </form>
    <br> <br>

    <% if (locals.overallCGPA) { %>
        <div class="notion-card">
            <h3 class="section-title">
                âœ… Overall CGPA: <%= overallCGPA.toFixed(2) %>
            </h3>
        </div>
    <% } %>

    <% if (locals.semesterWideData) { %>
        <% for( var semester in semesterWideData ) { %>
            <div class="notion-card">
                <h3 class="section-title">
                    ðŸ“š <%= semester %>
                </h3>
                <ul class="list-group">
                    <li class="list-group-item">
                        <i class="fa-regular fa-gem me-2"></i>
                        Credits: <%= semesterWideData[semester]["credits"] %>
                    </li>
                    <li class="list-group-item">
                        <i class="fa-regular fa-rectangle-list me-2"></i>
                        # Courses: <%= semesterWideData[semester]["# courses"] %>
                    </li>
                    <li class="list-group-item">
                        <i class="fa-regular fa-note-sticky me-2"></i>
                        GPA Contribution: <%= semesterWideData[semester]["gpa contribution"] %>
                    </li>
                    <li class="list-group-item">
                        <i class="fa-regular fa-hand-point-right me-2"></i>
                        SGPA: <%= semesterWideData[semester]["sgpa"] %>
                    </li>
                </ul>
            </div>
        <% } %>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"></script>

    <script src="./js/script.js"></script>
</body>

</html>